<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_geofence_point_operation_main_ll"
    android:orientation="vertical">

<LinearLayout android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    
    <TextView android:id="@+id/item_geofence_point_operation_name_tv"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/item_geofence_point_operation_fromto_tv"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"/>

   
   <ImageView android:id="@+id/item_geofence_point_operation_isadded_iv"
        android:contentDescription="@null"
        android:layout_width="35dp"
        android:layout_marginRight="8dp"
        android:layout_height="24dp"
        android:scaleType="fitXY"/>

    <!-- <Button android:id="@+id/item_geofence_point_operation_add_btn"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:layout_marginLeft="8dp"/>
    
    
    <Button android:id="@+id/item_geofence_point_operation_delete_btn"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/> -->
    
</LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:gravity="center_vertical"
     android:paddingBottom="2dp"
     android:orientation="horizontal" >

     <TextView android:id="@+id/item_geofence_point_operation_addmark_tv"
         android:layout_width="0dp"
         android:layout_weight="0.8"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:layout_height="wrap_content"/>

     </LinearLayout>

    <LinearLayout     android:paddingBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <TextView android:id="@+id/item_geofence_point_operation_coordinatebearing_tv"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"/>

        <TextView android:id="@+id/item_geofence_point_operation_userbearing_tv"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"/>

        <TextView android:id="@+id/item_geofence_point_operation_distance_tv"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"/>
        </LinearLayout>
</LinearLayout>